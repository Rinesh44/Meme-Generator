<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow"
        android:id="@+id/elevation">
        </View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edt_meme_top_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edt_text_bg"
            android:ems="10"
            android:hint="Top text"
            android:padding="10dp"
            android:singleLine="true" />
    </LinearLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/all_generated_image"
               >

                <ImageView
                    android:id="@+id/meme_generated_image"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"></ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/log"
                android:padding="10dp"
                android:id="@+id/logo1"
                android:visibility="invisible"
                android:layout_alignStart="@+id/meme_generated_image"
                android:layout_alignTop="@+id/meme_generated_image"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/log2"
                android:id="@+id/logo2"
                android:padding="3dp"
                android:visibility="invisible"
                android:layout_alignTop="@+id/meme_generated_image"
                android:layout_alignEnd="@+id/meme_generated_image"
                android:scaleType="fitXY"
                />

            </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edt_meme_bottom_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edt_text_bg"
            android:ems="10"
            android:hint="Bottom Text"
            android:padding="10dp"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>
    </ScrollView>
</LinearLayout>

